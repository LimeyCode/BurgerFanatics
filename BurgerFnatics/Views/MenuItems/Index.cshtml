@model IEnumerable<BurgerFnatics.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItemIngredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItemCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.MenuID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuGroup.MenuGroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemIngredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MenuItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MenuItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MenuItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
